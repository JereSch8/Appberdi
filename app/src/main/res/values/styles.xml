<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/cab200</item>
        <item name="colorPrimaryVariant">@color/cab200</item>
        <item name="colorPrimaryDark">@color/cab300</item>
        <item name="colorOnPrimary">@color/white20</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/black</item>
        <item name="colorSecondaryVariant">@color/black</item>
        <item name="colorOnSecondary">@color/white</item>

        <!--        <item name="android:colorBackground">@color/cab100</item>-->
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/montserrat</item>

        <item name="android:ambientShadowAlpha">0.02</item>
        <item name="android:spotShadowAlpha">0.06</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="AppTheme.Splash">
        <item name="android:windowBackground">@drawable/background</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>
</resources>