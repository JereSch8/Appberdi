<resources>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppWidget.IconButton" parent="Widget.MaterialComponents.Button.Icon">
        <item name="android:textColor">@color/black</item>
        <item name="backgroundTint">@color/button_background</item>
        <item name="shapeAppearanceOverlay">@style/AppShapeAppearance</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="rippleColor">@color/black10</item>
    </style>

    <style name="AppWidget.IconButton.Unelevated" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="iconTint">@color/white</item>
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="rippleColor">@color/white20</item>
        <item name="shapeAppearanceOverlay">@style/AppShapeAppearance</item>
    </style>

    <style name="AppWidget.IconButton.Outlined" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="iconTint">@color/white</item>
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="rippleColor">@color/white20</item>
        <item name="shapeAppearanceOverlay">@style/AppShapeAppearance</item>
    </style>

    <style name="AppWidget.IconOnly" parent="Widget.MaterialComponents.Button.TextButton.Icon">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">0dp</item>
        <item name="iconTint">@color/white</item>
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="rippleColor">@color/white20</item>
        <item name="shapeAppearanceOverlay">@style/AppShapeAppearance</item>
    </style>

    <style name="AppWidget.SocialIcon" parent="Widget.MaterialComponents.Button.TextButton.Icon">
        <item name="android:layout_width">32dp</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">0dp</item>
        <item name="iconTint">@null</item>
        <item name="rippleColor">@color/black</item>
        <item name="shapeAppearanceOverlay">@style/AppShapeAppearance</item>
    </style>

    <style name="AppShapeAppearance">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">24dp</item>
    </style>

    <style name="AppWidget.BackButton" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">@color/black</item>
        <item name="fabSize">mini</item>
        <item name="srcCompat">@drawable/ic_back</item>
        <item name="tint">@color/white</item>
    </style>

    <style name="TextAppearance.App.Chip" parent="TextAppearance.MaterialComponents.Chip">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/montserrat_medium</item>
    </style>

    <style name="Widget.App.Chip" parent="Widget.MaterialComponents.Chip.Filter">
        <item name="checkedIconTint">@color/white</item>
        <item name="chipBackgroundColor">@color/chip_background</item>
        <item name="android:textColor">@color/white</item>
        <item name="chipSurfaceColor">@android:color/transparent</item>
        <item name="android:textAppearance">@style/TextAppearance.App.Chip</item>
    </style>

    <style name="Widget.App.CheckBox" parent="Widget.MaterialComponents.CompoundButton.CheckBox">
        <item name="buttonTint">@color/white</item>
    </style>

</resources>